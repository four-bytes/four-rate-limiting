{
    "name": "four-bytes/four-rate-limiting",
    "description": "Generische Rate-Limiting-Library für PHP APIs — Token Bucket, Fixed Window, Sliding Window, Leaky Bucket",
    "version": "1.3.0",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "4 Bytes",
            "email": "info@4bytes.de"
        }
    ],
    "require": {
        "php": "^8.4",
        "psr/http-message": "^2.0",
        "psr/log": "^3.0",
        "psr/simple-cache": "^3.0"
    },
    "suggest": {
        "symfony/cache": "PSR-16 Implementierung für Redis/Memcached/APCu",
        "phpfastcache/phpfastcache": "Alternative PSR-16 Implementierung",
        "psr/http-message": "^2.0 — Für RateLimitMiddleware (HTTP-Integration)"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Four\\RateLimit\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Four\\RateLimit\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests",
        "cs-check": "phpcs src tests",
        "cs-fix": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true
    }
}
